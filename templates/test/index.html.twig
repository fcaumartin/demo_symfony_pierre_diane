{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col-6">
        {% for artist in artists %}
        <div>
            <hr>

            {{ artist.nom }}
            ({{ artist.discs | length }})
            <hr>
            {% for disc in artist.discs %}
                <div>
                    <a href="/disc/{{disc.id}}">
                        {{ disc.titre}}
                        {{ disc.annee}}
                    </a>
                </div>
            {% endfor %}
        </div>
            
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}
